{
    "name": "翻译工具",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "翻译选中英文字段",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_title": "日报工具",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "popup.html",
    "background": {
        "scripts": ["script.js", "jquery.js"]
    },
    "content_scripts": [
		{
		  "matches": ["http://ops.yunshanmeicai.com/*"],
      "js" : ["jquery.js", "contentscript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "http://*/*","https://*/*",
    "tabs",
    "cookies",
    "notifications",
    "activeTab"
  ]
}